{
    "meta": {
        "apiVersion": "1.0.0"
    },
    "tokens": [
        "__settings__.logging.loglevel",
        "site_url",
        "jql",
        "fields",
        "service_account.username",
        "service_account.password"
    ],
    "global_settings": {
        "logging": {
            "level": "{{__settings__.logging.loglevel}}"
        }
    },
    "requests": [
        {
            "pre_process": {
                "skip_conditions": [],
                "pipeline": []
            },
            "request": {
                "url": "https://{{site_url}}/rest/api/2/search?jql={{jql}}&maxResults=100&fields=id,key,status,updated,{{fields}}",
                "method": "GET",
                "headers": {
                    "Accept": "application/json"
                },
                "auth": {
                    "type": "basic_auth",
                    "options": {
                        "username": "{{service_account.username}}",
                        "password": "{{service_account.password}}"
                    }
                }
            },
            "post_process": {
                "skip_conditions": [
                    {
                        "input": [
                            "{{__response__.body}}",
                            "$.$.issues"
                        ],
                        "method": "json_empty"
                    }
                ],
                "pipeline": [
                    {
                        "input": [
                            "{{__response__.body}}",
                            "$.$.issues"
                        ],
                        "method": "json_path",
                        "output": "__stdout__"
                    },
                    {
                        "input": [
                            "{{__stdout__}}",
                            "",
                            "{{index}}",
                            "{{host}}",
                            "{{source}}",
                            "{{sourcetype}}"
                        ],
                        "method": "splunk_xml",
                        "output": "__stdout__"
                    },
                    {
                        "input": [
                            "{{__stdout__}}"
                        ],
                        "method": "std_output"
                    }
                ]
            },
            "iteration_mode": {
                "iteration_count": "1",
                "stop_conditions": [
                    {
                        "input": [
                            "{{__response__.body}}",
                            "$.$.issues"
                        ],
                        "method": "json_empty"
                    }
                ]
            }
        }
    ]
}